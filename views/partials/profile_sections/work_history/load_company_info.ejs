    <div class="modal-content">

        <div class="row">
            <form class="col s12" action="/linkedin_company_search" method="POST">
                <div class="row">
                    <div class="input-field col s7">
                        <input placeholder="company name" id="company_name" type="text" class="validate">
                        <label for="first_name">Company Search</label>

                        <button class="btn waves-effect" type="submit" id="company_search_button">
                            Search LinkedIn
                            <i class="material-icons right"> search</i>
                        </button>
            </form>
        </div>

        <div class="input-field col s5">
