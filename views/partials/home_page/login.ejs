<ul class="collapsible" id="margin_top">
    <li>
        <div class="collapsible-header z-depth-4" id="login_box">

            Login
            <span class="badge">
                <i class="tiny material-icons" id="plus_sign">add</i>
            </span>
        </div>
        <div class="collapsible-body z-depth-4" id="login_box_body">
            <form class="col s12" action="/login" method="POST">
                <div class="input-field col s12">
                    <input placeholder="Enter user name here" id="login_username" type="email" class="validate" name="login_username">
                    <label for="username">Email Address </label>

                </div>

                <div class="input-field col s12">
                    <input placeholder="Choose a password" id="login_password" type="password" class="validate" name="login_password">
                    <label for="password"> New Password </label>

                </div>
                <center>
                    <button class="btn waves-effect waves-light" type="submit" id="login_button">
                        Login
                        <i class="material-icons right"> send</i>
                    </button>
                </center>
            </form>
        </div>
    </li>
</ul>